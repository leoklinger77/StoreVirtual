@model StoreVirtual.Models.Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}

<form asp-action="CadastroCliente" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-action="Login" asp-controller="Home" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                @if (TempData["MSG_E"] != null)
                                {
                                    <p class="alert alert-danger">@Html.Raw(TempData["MSG_E"])</p>
                                }

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome"></label>
                                        <input asp-for="Nome" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Nascimento"></label>
                                        <input type="date" asp-for="Nascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    <br />
                                    <span asp-validation-for="Sexo" class="text-danger"></span>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="CPF"></label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF" class="text-danger"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Telefone"></label>
                                        <input type="text" asp-for="Telefone" class="form-control" placeholder="">
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Senha"></label>
                                    <input asp-for="Senha" class="form-control" type="password">
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Register </button>
                                </div>

                            </article>
                            <div class="border-top card-body text-center">Já tem uma conta? <a asp-action="Login" asp-controller="Home">Entrar</a></div>
                        </div>

                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>



