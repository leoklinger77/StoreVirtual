@model Produto
@{
    ViewData["Title"] = "Insert";
}

<h1>Insert</h1>

<form method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Categoria"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categoria">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="row">

        <div class="form-group col-md-6">
            <label asp-for="Quantidade"></label>
            <div class="input-group">
                <input asp-for="Quantidade" class="form-control" />
                <div class="input-group-text">Unid</div>
            </div>
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Valor"></label>
            <div class="input-group">
                <div class="input-group-text">R$</div>
                <input asp-for="Valor" class="form-control money" />
            </div>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>


    <h4>Frete</h4>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Peso"></label>
            <div class="input-group">
                <input asp-for="Peso" type="text" class="form-control" />
                <div class="input-group-text">Kg</div>
            </div>
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Largura"></label>
            <div class="input-group">
                <input asp-for="Largura" type="number" class="form-control" />
                <div class="input-group-text">Cm</div>
            </div>
            <span asp-validation-for="Largura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Altura"></label>
            <div class="input-group">
                <input asp-for="Altura" type="number" class="form-control" />
                <div class="input-group-text">Cm</div>
            </div>
            <span asp-validation-for="Altura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3 ">
            <label asp-for="Comprimento"></label>
            <div class="input-group">
                <input asp-for="Comprimento" type="number" class="form-control" />
                <div class="input-group-text">Cm</div>
            </div>
            <span asp-validation-for="Comprimento" class="text-danger"></span>
        </div>
    </div>
    <div class="row imagens">
        @for (int i = 0; i < 12; i++)
        {
            <div class="col-md-3">
                <img src="~/Img/img_padrao.png" class="img-thumbnail" />
                <div class=" btn btn-danger btn-image-excluir">Excluir</div>
            </div>
        }

    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
</form>