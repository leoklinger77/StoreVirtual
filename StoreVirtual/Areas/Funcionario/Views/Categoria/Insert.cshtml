@model Categoria
@{
    ViewData["Title"] = "Insert";
}

<h1>Insert</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control" placeholder="Digite o slug" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPaiId"></label>
        <input asp-for="CategoriaPaiId" class="form-control" placeholder="Digite a Categoria Pai" />
        <span asp-validation-for="CategoriaPai" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
</form>