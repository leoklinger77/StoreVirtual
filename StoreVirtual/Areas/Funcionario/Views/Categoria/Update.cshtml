@model Categoria
@{
    ViewData["Title"] = "Update";
}
<h1>Update</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
     <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control" placeholder="Digite o slug" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPaiId"></label>
        <select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categoria">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaPai" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
</form>