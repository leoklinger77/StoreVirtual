@model Funcionario
@{
    ViewData["Title"] = "Insert";
}

<h1>Insert</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da funcionario" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" placeholder="Digite o e-mail" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmarSenha"></label>
        <input asp-for="ConfirmarSenha" class="form-control" placeholder="Digite o e-mail" />
        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
</form>