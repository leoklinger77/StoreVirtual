@model Funcionario
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<form method="post">
    <input asp-for="Id" type="hidden" />
    <input asp-for="Tipo" type="hidden" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da funcionario" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
</form>